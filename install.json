{
  "resources": {
    "body": [
      {
        "type": "style",
        "src": "./install/style.css"
      },
      {
        "type": "script",
        "src": "./aware.js",
        "moduleType": "global",
        "exports": [
          "reader"
        ],
        "depends": {
          "github.com/jquery/jquery:jquery.js": "jQuery"
        }
      },
      {
        "type": "script",
        "src": "./install/helper.js",
        "moduleType": "global",
        "depends": {
          "./aware.js": "reader"
        }
      },
      {
        "type": "script",
        "contents": "EagerAwareHelper(INSTALL_OPTIONS)"
      }
    ]
  },
  "dependencies": {
    "github.com/jquery/jquery": ">= 1.7.0, <= 1.10.2"
  },
  "options": {
    "properties": {
      "when": {
        "order": 1,
        "title": "Who should see the message?",
        "type": "string",
        "format": "radios",
        "enum": ["firstVisit", "repeatVisitor", "firstVisitOfDay"],
        "enumNames": {
          "firstVisit": "First-time visitors<span class=\"help-text\">Users who are visiting my site for the first time</span>",
          "repeatVisitor": "Repeat-visitors<span class=\"help-text\">Users who have been to my site at least once before</span>",
          "firstVisitOfDay": "First return today<span class=\"help-text\">Users who have visited my site before, but this is their first visit today</span>"
        },
        "default": "firstVisit"
      },
      "message": {
        "order": 2,
        "title": "What should the message say?",
        "type": "string",
        "format": "textarea",
        "default": "Welcome to __CompanyName__! If you have any questions or just want to say hello, send us a line at __EmailAddress__."
      },
      "style": {
        "type": "object",
        "title": "How should the message be styled?",
        "order": 3,
        "properties": {
          "color": {
            "order": 1,
            "title": "Text color",
            "type": "string",
            "format": "color",
            "default": "#303786"
          },
          "backgroundColor": {
            "order": 2,
            "title": "Background color",
            "type": "string",
            "format": "color",
            "default": "#ddedff"
          },
          "fontSize": {
            "order": 3,
            "title": "Text size",
            "type": "string",
            "enum": [
              ".75em",
              "1em",
              "1.5em",
              "2.5em"
            ],
            "enumNames": {
              ".75em": "Small",
              "1em": "Normal",
              "1.5em": "Large",
              "2.5em": "Huge"
            },
            "default": "1em"
          }
        }
      },
      "location": {
        "order": 4,
        "title": "Where would you like the message to appear?",
        "type": "object",
        "format": "element",
        "default": {
          "element": "body",
          "method": "prepend"
        }
      }
    }
  }
}
